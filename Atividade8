# Input do texto pelo usu√°rio:
text = str(input("Informe o texto: "))
text = text.split(" ", 50)
textmax = 50
textoFinal, linha_2 = "", ""
longWord = ""

while True:
    tamanhoTexto = 0
    for i in text:
        tamanhoTexto += len(i)
        if tamanhoTexto <= textmax:
            textoFinal += i + " "
        else:
            textoFinal += "\n"
            continue
    continue
print(textoFinal)
